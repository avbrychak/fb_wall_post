.row.row-centered
  %h3 Please enter your runner id
  .col-md-12
    = simple_form_for @event, html: {class: 'form-inline'}, method: 'POST', remote: true do |f|
      = f.input :runner_id, input_html: {class: 'form-control'}, label: false
      = f.button :submit, 'Post video to facebook by runner id', input_html: {class: 'btn btn-primary'}
